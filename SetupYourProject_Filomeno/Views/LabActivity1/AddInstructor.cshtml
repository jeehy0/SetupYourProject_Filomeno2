@model Instructor;

    <p>Add Instructor</p>

    <style>
        span {
            color: red;
        }
    </style>

    <form asp-action="AddInstructor" method="post">
        @* <div class="form-group">
            <label asp-for="Id">ID</label>
            <input asp-for="Id" class="form-control" />
        </div> *@

        <div class="form-group">
            <label asp-for="FirstName">First Name</label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName"> </span>
        </div>

        <div class="form-group">
            <label asp-for="LastName">Last Name</label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName"> </span>
        </div>

        <div class="form-group">
            <label asp-for="Rank">Rank</label>
            <select asp-for="Rank" asp-items="Html.GetEnumSelectList(typeof(Rank))" class="form-control"></select>
        <span asp-validation-for="Rank"> </span>
        </div>

        <div class="form-group">
            <label asp-for="IsTenured">Status</label>
            <select asp-for="IsTenured" class="form-control">
                <option value="true">Permanent</option>
                <option value="false">Probationary</option>
            </select>
        <span asp-validation-for="IsTenured"> </span>
        </div>

        <div class="form-group">
            <label asp-for="HiringDate">HiringDate</label>
            <input asp-for="HiringDate" class="form-control" />
        <span asp-validation-for="HiringDate"> </span>
        </div>

        <br />
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

