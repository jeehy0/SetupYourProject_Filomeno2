@model Student;

<p>Are you sure you want to delete this?</p>

<form asp-action="DeleteStudent" method="post">
    <div class="form-group">
        <label asp-for="Id">ID</label>
        <input asp-for="Id" class="form-control" readonly/>
    </div>

    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Course">Rank</label>
        <select asp-for="Course" asp-items="Html.GetEnumSelectList(typeof(Course))" class="form-control" readonly></select>
    </div>


    <div class="form-group">
        <label asp-for="AdmissionDate">HiringDate</label>
        <input asp-for="AdmissionDate" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Email">HiringDate</label>
        <input asp-for="Email" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="GPA">HiringDate</label>
        <input asp-for="GPA" class="form-control" readonly />
    </div>

    <p>Are you sure you want to delete?</p>
    <button type="submit" class="btn btn-danger">Yes</button>
    <button type="submit" class="btn btn-primary">No</button>
</form>


