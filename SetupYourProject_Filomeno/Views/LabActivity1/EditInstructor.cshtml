@model Instructor;

<p>Edit Instructor</p>

<form asp-action="EditInstructor" method="post">
    <div class="form-group">
        <label asp-for="Id">ID</label>
        <input asp-for="Id" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Rank">Rank</label>
        <select asp-for="Rank" asp-items="Html.GetEnumSelectList(typeof(Rank))" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="IsTenured">Status</label>
        <select asp-for="IsTenured" class="form-control">
            <option value="true">Permanent</option>
            <option value="false">Probationary</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="HiringDate">HiringDate</label>
        <input asp-for="HiringDate" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <div class="form-group">
        <button type="button" class="btn btn-secondary" onclick="history.back();"Cancel</button>
    </div>
</form>


