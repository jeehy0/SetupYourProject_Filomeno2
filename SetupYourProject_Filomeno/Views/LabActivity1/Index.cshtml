@model IEnumerable<Instructor>;

<div>
    Instructor List
</div>

<table class="table table-dark">
    <tr>
        <th colspan="8">Instructors</th>
    </tr>

    <tr>
        <td>Id</td>
        <td>Name</td>
        <td>Status</td>
        <td>Rank</td>
        <td>Hiring Date</td>
        <td>Details</td>
        <td>Edit</td>
        <td>Delete</td>
    </tr>

    @foreach (var instructor in Model)
    {
        <tr>
            <td>@instructor.Id</td>
            <td>@instructor.FirstName @instructor.LastName</td>
            <td>@(instructor.IsTenured ? "Permanent" : "Probationary")</td>
            <td>@instructor.Rank</td>
            <td>@instructor.HiringDate</td>
            <td><a asp-action="ShowDetails" asp-route-id="@instructor.Id">Show Details</a></td>
            <td><a class="btn btn-primary" asp-action="EditInstructor" asp-route-id="@instructor.Id">Edit</a></td>
            <td><a class="btn btn-danger" asp-action="DeleteInstructor" asp-route-id="@instructor.Id">Delete</a></td>
        </tr>
    }
</table>

<a asp-action="AddStudent" class="btn btn-primary">Add</a>